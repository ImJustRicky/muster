{
  "project": "myapp",
  "version": "1",
  "root": "/home/deploy/myapp",
  "services": {
    "api": {
      "name": "API Server",
      "health": {
        "type": "http",
        "endpoint": "/health",
        "port": 8080,
        "timeout": 10,
        "enabled": true
      },
      "credentials": {
        "mode": "off"
      },
      "skip_deploy": false
    },
    "redis": {
      "name": "Redis",
      "health": {
        "type": "tcp",
        "port": 6379,
        "timeout": 5,
        "enabled": true
      },
      "credentials": {
        "mode": "off"
      }
    },
    "postgres": {
      "name": "PostgreSQL",
      "skip_deploy": true,
      "health": {
        "type": "tcp",
        "port": 5432,
        "timeout": 5,
        "enabled": true
      },
      "credentials": {
        "mode": "save"
      }
    }
  },
  "deploy_order": ["redis", "api"],
  "skills": []
}
